# URL Shortener MCP Server Configuration

# Base URL of the URL shortening service API
URL_SHORTENER_API_BASE_URL=http://localhost:3000

# API key for authentication with the URL shortening service
URL_SHORTENER_API_KEY=your-api-key-here

# Admin credentials for admin operations
URL_SHORTENER_ADMIN_EMAIL=admin@example.com
URL_SHORTENER_ADMIN_PASSWORD=your-admin-password

# Enable/disable the MCP server functionality
URL_SHORTENER_MCP_ENABLED=true

# Optional: Database connection (if needed for direct access)
DATABASE_URL=./prisma/dev.db

# Billing and Subscription Configuration
# Enable/disable the billing and subscription system
BILLING_ENABLED=false

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Webhook Endpoint (for receiving payment events)
STRIPE_WEBHOOK_ENDPOINT=/api/billing/webhook